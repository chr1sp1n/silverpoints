<div id="dvl-timer" class="container">
  <section class="text-center setter">
    <div class="d-flex align-items-center flex-wrap">
      <div class="text-left flex-fill">
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Development name</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="A magic day">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Date</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="20/07/1969">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
        </form>
      </div>
      <div class="ml-auto">
        <h5 class="mb-3">Total development time</h5>
        {% include module_path ~ '/templates/include/time-setter.html.twig' %}
      </div>
    </div>
    <hr>
    <div class="d-flex align-items-center flex-wrap mt-4">
      <div class="mr-auto">
        <h5 class="mb-3">Initial agitation duration</h5>
        {% include module_path ~ '/templates/include/time-setter.html.twig' %}
      </div>
      <div class="">
        <h5 class="mb-3">Other agitations duration</h5>
        {% include module_path ~ '/templates/include/time-setter.html.twig' %}
      </div>
      <div class="ml-auto">
        <h5 class="mb-3">Agitations cadence</h5>
        {% include module_path ~ '/templates/include/time-setter.html.twig' %}
      </div>
    </div>
  </section>
</div>
